<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.example.rakesh.profileview.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/MainLayout"
        android:layout_width="220dp"
        android:layout_height="320dp">


        <ImageView
            android:id="@+id/MainImage"
            android:src="@drawable/mainimg1"
            android:layout_width="220dp"
            android:layout_height="320dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/Starred"
            android:src="@drawable/star"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/Sigil"
            android:src="@drawable/sigil"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    
    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/SideImage1"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/MainLayout"
        android:layout_width="100dp"
        android:src="@drawable/mainimg1"
        android:layout_height="120dp"
        android:layout_marginBottom="40dp"/>


    <ImageView
        android:id="@+id/SideImage2"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/SideImage1"
        android:layout_toRightOf="@id/MainLayout"
        android:layout_width="100dp"
        android:src="@drawable/mainimg1"
        android:layout_height="120dp" />
    
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:id="@+id/BottomImagesLayout"
        android:layout_below="@id/MainLayout">

        <ImageView
            android:src="@drawable/mainimg1"
            android:id="@+id/mainimg1"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:src="@drawable/mainimg1"
            android:id="@+id/BottomImage2"
            android:layout_marginLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/BuyMoreButton"
            android:layout_height="wrap_content"
            android:text="BUY MORE"
            android:layout_marginLeft="30dp"
            android:layout_gravity="end|center_vertical"/>

    </LinearLayout>


        <VideoView
            android:id="@+id/Video"
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_below="@id/BottomImagesLayout"/>


        <TextView
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_alignTop="@+id/Video"
            android:layout_toRightOf="@+id/Video"
            android:layout_toEndOf="@+id/Video"
            android:text="DETAILS"
            android:gravity="center"
            android:scrollbars="vertical"/>

    </RelativeLayout>

</ScrollView>
